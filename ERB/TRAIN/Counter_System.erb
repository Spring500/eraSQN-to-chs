@SET_COUNTER_BASE
#DIM LCOUNT
#DIM MEMO_STOCK

;MASTER以外の精力限界値セット
FOR LCOUNT, 1, CHARANUM
	MAXBASE:LCOUNT:精力 = MAXBASE:LCOUNT:体力/300 + TALENT:LCOUNT:淫乱*3 + TALENT:LCOUNT:竜の血*5 + TALENT:LCOUNT:上位夢魔*5 + ABL:LCOUNT:欲望*2 + ABL:LCOUNT:技巧 + ABL:LCOUNT:ＬＶ
NEXT

;MASTERの精力限界値リセット
MAXBASE:MASTER:精力 = 10 + ABL:MASTER:技巧*4 + TALENT:MASTER:竜の血*5 + TALENT:MASTER:上位夢魔*5 + ABL:MASTER:ＬＶ
SIF CONFIG("ＥＡＳＹ")
	MAXBASE:MASTER:精力 += 5

;アクセサリ効果（精力）
MAXBASE:MASTER:精力 = MULTIPLY(MAXBASE:MASTER:精力, 100 + TALENT:MASTER:精力強化)

;ストックが増えた時には増える
MEMO_STOCK = MAXBASE:MASTER:ストック

;ストック
SELECTCASE FLAG:255
CASE IS >= 21
	MAXBASE:MASTER:ストック = 3
CASE IS >= 14
	MAXBASE:MASTER:ストック = 2
CASE IS >= 7
	MAXBASE:MASTER:ストック = 1
CASEELSE
	MAXBASE:MASTER:ストック = 0
ENDSELECT

;アクセサリ効果（ストック）
SIF TALENT:MASTER:ストック増加
	MAXBASE:MASTER:ストック += 1

BASE:MASTER:ストック = MIN(BASE:MASTER:ストック + MAXBASE:MASTER:ストック - MEMO_STOCK, MAXBASE:MASTER:ストック)


;レベルリミッター使用時にはなんと！常に全快！！…まぁ禁断の知識の産物だしな
;IF CONFIG("レベルリミッター")
;	BASE:MASTER:精力 = MAXBASE:MASTER:精力
;	BASE:MASTER:ストック = MAXBASE:MASTER:ストック
;ENDIF

;精力の回復処理
FOR LCOUNT, 1, CHARANUM
	SIF BASE:LCOUNT:精力 == 0 || BASE:LCOUNT:精力 > MAXBASE:LCOUNT:精力 || CONFIG("ＥＡＳＹ")
		BASE:LCOUNT:精力 = MAXBASE:LCOUNT:精力
NEXT


@SET_COUNTER_ABL
#DIM LCOUNT
;ジャンルごとに何をやるかとその確率を決定
CALL CALC_COUNTER_ABL, TARGET

;同じコマンドを連続で行う確率は低くする
FOR LCOUNT, 0, 11
	SIF ABL:(LCOUNT + 40) && I:LCOUNT == PREVCOM
		ABL:(LCOUNT + 40) = MAX(ABL:(LCOUNT + 40)/2, 1)
NEXT
;-------------------------------------------------
;インサートしている時のフェラなど、不可能な行動はここで処理
;-------------------------------------------------
;インサートでイかされた後は、ご奉仕かキス率が高い
IF ( (INSERT("Ｖインサート") || PREVCOM == 65 || PREVCOM == 66 || PREVCOM == 67) && PREVEX("Ｖ絶頂") ) || ( (INSERT("Ａインサート") || PREVCOM == 75) && PREVEX("Ａ絶頂") ) || ( (INSERT("尿道インサート") || PREVCOM == 83 || PREVCOM == 84 || PREVCOM == 85 || PREVCOM == 86 || PREVCOM == 87 || PREVCOM == 88) && PREVEX("尿道絶頂") )
	ABL:手 /= 4
	ABL:口 *= 4
	SIF I:2 != 104
		ABL:胸 /= 4
	ABL:足 /= 4
	;サドっ気あるならお掃除強要
	IF ABL:欲望 + ABL:サドっ気 + TALENT:サド >= ABL:奉仕精神 * 2 && RAND:2 == 0
		ABL:顔面騎乗 *= 3
