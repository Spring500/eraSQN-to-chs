	RETURNF I:10
ENDSELECT


@CALC_COUNTER_ABL, ARG
#DIM LCOUNT
LOCAL:100 = TARGET
TARGET = ARG
;COMABLEで実行条件を判定するためのFLAGをセット
FLAG:10 = 1

;奉仕系の種別では、対応する得意技能の意味が強め
VARSET I

SELECTCASE ABL:奉仕精神 - ABL:欲望 - TEQUIP:媚薬/100
CASE IS > 0
	LOCAL:1 = (ABL:奉仕精神 - ABL:欲望 - TEQUIP:媚薬/100)*2
CASE IS < 0
	LOCAL:2 = (TEQUIP:媚薬/100 + ABL:欲望 - ABL:奉仕精神)*2
ENDSELECT

;ABL:手,手
IF COND("調教側")
	CALL COUNTER_ABL, 0, 5, 7, 8, 141
ELSE
	CALL COUNTER_ABL, 0, 90, 97, 105
ENDIF
IF ABL:手
	ABL:手 += TALENT:献身 + LOCAL:1 + ABL:指使い
	SIF COND("手に弱い", PLAYER)
		ABL:手 += 5
ENDIF

;ABL:口,口
IF COND("調教側")
	CALL COUNTER_ABL, 1, 1
ELSE
	CALL COUNTER_ABL, 1, 91, 98, 150
ENDIF
IF ABL:口
	ABL:口 += TALENT:献身 + LOCAL:1 + ABL:舌使い
	SIF COND("口に弱い", PLAYER)
		ABL:口 += 5
ENDIF

;ABL:胸,胸
IF COND("調教側")
ELSE
	CALL COUNTER_ABL, 2, 82, 92, 104
ENDIF
IF ABL:胸
	ABL:胸 += TALENT:献身 + TALENT:巨乳*3 + LOCAL:1 + ABL:魔乳
	SIF COND("胸に弱い", PLAYER)
		ABL:胸 += 5
ENDIF

;ABL:足,足
IF COND("調教側")
ELSE
	IF MAX(ABL:サドっ気 + TALENT:サド, ABL:奉仕精神) + ABL:PLAYER:マゾっ気 >= 2
		CALL COUNTER_ABL, 3, 95
	ELSE
		ABL:足 = 0
	ENDIF
ENDIF
IF ABL:足
	ABL:足 += TALENT:高慢 + TALENT:サド + LOCAL:1 + ABL:足使い
	SIF COND("脚に弱い", PLAYER)
		ABL:足 += 5
ENDIF

;ABL:顔面騎乗,顔面騎乗
IF COND("調教側")
	CALL COUNTER_ABL, 4, 98
ELSE
	;聖水イベントは前提条件が厳しくレアなので確率優遇
	CALL COM_ABLE144
	IF RESULT
		CALL COUNTER_ABL, 4, 144
	ELSEIF ABL:Ａ感覚 >= 3 || TALENT:オトコ
		CALL COUNTER_ABL, 4, 1, 9, 144
	ELSE
		CALL COUNTER_ABL, 4, 1, 144
	ENDIF
ENDIF
IF ABL:顔面騎乗
	ABL:顔面騎乗 += TALENT:好色 + TALENT:淫乱 + LOCAL:2 + ABL:腰使い
	SELECTCASE I:4
	CASE 1
		ABL:顔面騎乗 += TALENT:淫壷
		SIF COND("♀に弱い", PLAYER)
			ABL:顔面騎乗 += 5
	CASE 9
		ABL:顔面騎乗 += TALENT:尻穴狂い
		SIF COND("お尻に弱い", PLAYER)
			ABL:顔面騎乗 += 5
	CASE 144
		;比較的レアイベントなので確率高め
		ABL:顔面騎乗 += ABL:サドっ気*10 + TALENT:サド*50
		SIF TALENT:倒錯的
			ABL:顔面騎乗 += 50
		SELECTCASE BASE:尿意
		CASE IS >= 20000
			ABL:顔面騎乗 += 100
		CASE IS >= 15000
			ABL:顔面騎乗 += 50
		ENDSELECT
	ENDSELECT
ENDIF

;ABL:騎乗位,騎乗位
IF COND("調教側")
ELSE
	;基本はＶ騎乗位だが、Ａと尿道でも出来るかで分岐
	IF CHECK("Ａインサート") && CHECK("尿道インサート")
		;淫壷と尻穴狂いの有無で確率にすごい偏りが出る
		IF TALENT:淫壷 && TALENT:尻穴狂い == 0 && TALENT:尿道狂い == 0 && RAND:10
			CALL COUNTER_ABL, 5, 65, 66, 67, 68
		ELSEIF TALENT:淫壷 == 0 && TALENT:尻穴狂い && TALENT:尿道狂い == 0 && RAND:10
			CALL COUNTER_ABL, 5, 75
		ELSEIF TALENT:淫壷 == 0 && TALENT:尻穴狂い == 0 && TALENT:尿道狂い && RAND:10
			CALL COUNTER_ABL, 5, 88
		ELSE
			CALL COUNTER_ABL, 5, 65, 66, 67, 68, 75, 88
		ENDIF
	ELSEIF CHECK("尿道インサート")
		;淫壷と尿道狂いの有無で確率にすごい偏りが出る
		IF TALENT:淫壷 && TALENT:尿道狂い == 0 && RAND:10
			CALL COUNTER_ABL, 5, 65, 66, 67, 68
		ELSEIF TALENT:淫壷 == 0 && TALENT:尿道狂い && RAND:10
			CALL COUNTER_ABL, 5, 88
		ELSE
			CALL COUNTER_ABL, 5, 65, 66, 67, 68, 88
		ENDIF
	ELSEIF CHECK("Ａインサート")
		;淫壷と尻穴狂いの有無で確率にすごい偏りが出る
		IF TALENT:淫壷 && TALENT:尻穴狂い == 0 && RAND:10
			CALL COUNTER_ABL, 5, 65, 66, 67, 68
		ELSEIF TALENT:淫壷 == 0 && TALENT:尻穴狂い && RAND:10
			CALL COUNTER_ABL, 5, 75
		ELSE
			CALL COUNTER_ABL, 5, 65, 66, 67, 68, 75
		ENDIF
	ELSE
		CALL COUNTER_ABL, 5, 65, 66, 67, 68
	ENDIF
ENDIF
IF ABL:騎乗位
	;アナル騎乗位や尿道騎乗位はしてこないかも
	IF I:5 >= 70 && I:5 <= 79 && TALENT:尻穴狂い == 0 && ABL:Ａ感覚 < 5
		CALL COM_ABLE65
		IF RESULT
			SIF COND("発情期") || EXP:Ａ性交経験 < MIN(50, EXP:Ｖ性交経験)
				I:5 = 65
		ENDIF
	ELSEIF I:5 == 88 && TALENT:尿道狂い == 0
		CALL COM_ABLE65
		IF RESULT
			SIF COND("発情期") || EXP:尿道性交経験 < MIN(50, EXP:Ｖ性交経験)
				I:5 = 65
		ENDIF
	ENDIF

	ABL:騎乗位 += TALENT:好色 + TALENT:淫乱 + LOCAL:2 + ABL:腰使い
	SIF MARK:淫紋 && TALENT:オトコ == 0
		ABL:騎乗位 += (MARK:淫紋 + 1)/2

	SELECTCASE I:5
	CASE 65 TO 69
		SIF TARGET == ASSI
			I:5 = 65
		ABL:騎乗位 += ABL:Ｖ感覚 + TALENT:淫壷
		SIF INSERT("Ｖインサート")
			ABL:騎乗位 += 5
		SIF COND("♀に弱い", PLAYER)
			ABL:騎乗位 += 5
	CASE 75
		ABL:騎乗位 += ABL:Ａ感覚 + TALENT:尻穴狂い
		SIF INSERT("Ａインサート")
			ABL:騎乗位 += 5
		SIF COND("お尻に弱い", PLAYER)
			ABL:騎乗位 += 5
	CASE 88
		ABL:騎乗位 += TALENT:尿道狂い*3
		SIF INSERT("尿道インサート")
			ABL:騎乗位 += 5
	ENDSELECT
ENDIF

;ABL:キス,キス
IF COND("調教側")
	CALL COUNTER_ABL, 6, 6
ELSE
	CALL COUNTER_ABL, 6, 6
ENDIF
IF ABL:キス
	ABL:キス += TALENT:恋慕 + TALENT:蕩唇 + LOCAL:2 + ABL:舌使い
	SIF COND("唇に弱い", PLAYER)
		ABL:キス += 5
ENDIF

;ABL:お尻責め,お尻責め
IF COND("調教側")
	CALL COUNTER_ABL, 7, 2, 142
ELSE
	CALL COUNTER_ABL, 7, 96
ENDIF
IF ABL:お尻責め && MAX(ABL:サドっ気 + TALENT:サド, ABL:奉仕精神) + ABL:PLAYER:マゾっ気 >= 6
	ABL:お尻責め += ABL:サドっ気/2 + TALENT:サド + ABL:PLAYER:マゾっ気/2 + LOCAL:1
	;アナル調教知識
	SIF GETBIT(TALENT:調教知識, 3)
		ABL:お尻責め += 5
ELSE
	ABL:お尻責め = 0
	I:7 = 0
ENDIF

;ABL:レイプ,TARGETのペニス使用or逆レイプ
IF COND("調教側")
	CALL COUNTER_ABL, 8, 60, 61, 64, 65, 71, 75, 140
ELSE
	CALL COUNTER_ABL, 8, 4, 120, 126
ENDIF
IF ABL:レイプ
	ABL:レイプ += LOCAL:2 + ABL:腰使い
	IF TALENT:オトコ && TALENT:PLAYER:オトコ
		ABL:レイプ += ABL:ＢＬっ気
	ELSEIF TALENT:オトコ == 0 && TALENT:PLAYER:オトコ == 0
		ABL:レイプ += ABL:レズっ気 + TALENT:両刀
	ENDIF
	SIF PENIS(TARGET)
		ABL:レイプ += ABL:欲望/2
	;オトコ
	SIF TALENT:オトコ
		ABL:レイプ += 5
ENDIF

;ABL:素股,素股
IF COND("調教側")
ELSE
	CALL COUNTER_ABL, 9, 80, 93, 94
ENDIF
SIF ABL:素股
	ABL:素股 += TALENT:献身 + LOCAL:1 + ABL:腰使い/2

;ABL:道具
IF COND("調教側")
ELSE
	CALL COUNTER_ABL, 10, 304, 305
ENDIF
SIF ABL:道具
	ABL:道具 += LOCAL:2 + TALENT:サド*5

