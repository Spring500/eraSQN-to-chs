	ENDIF
	ABL:キス *= 2
	ABL:お尻責め /= 5
	ABL:レイプ /= 5
	ABL:素股 /= 4
	ABL:道具 = 0
;インサートの後はインサートor挿入れたままできること
ELSEIF INSERT("インサート") && ABL:騎乗位 + ABL:キス && RAND:4
	ABL:手 = 0
	ABL:口 = 0
	SIF I:2 != 104
		ABL:胸 = 0
	ABL:足 = 0
	ABL:顔面騎乗 = 0
	ABL:お尻責め = 0
	ABL:レイプ = 0
	ABL:素股 = 0
	ABL:道具 = 0
