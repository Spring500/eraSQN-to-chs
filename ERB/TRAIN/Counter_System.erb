IF LOCAL == 0
	IF ARG == TARGET
		IF TALENT:オトコ
			ABL:顔面騎乗 = 1
			RETURNF 9
		ELSE
			ABL:顔面騎乗 = 1
			RETURNF 1
		ENDIF
	ELSE
		RETURNF -1
	ENDIF
ENDIF

