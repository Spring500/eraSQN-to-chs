SIF NUM("ターン数") == 0 && PREVCOM:2 >= 0
	PRINTFORM \@ PLAYER == MASTER ? (%TEXTS("助手の名称")%) # (主人) \@
SETCOLOR DEF_COLOR("イエロー")
PRINTFORM %STR:1%
RESETCOLOR
PRINTFORML >

@USERCOM

LOCAL = RESULT

;HARDで押し倒されているなら、主導権が無いフラグをセット
IF CONFIG("ＨＡＲＤ") && TEQUIP:押し倒し
	SETBIT FLAG:99, 11
ELSE
	CLEARBIT FLAG:99, 11
ENDIF

TFLAG:103 = LOCAL

;コマンド選択
IF LOCAL >= 0 && LOCAL <= 299
	IF CONFIG("調教コンフィグモード") == 0
		CALL NO_SELECTCOM, LOCAL

		SIF RESULT == 999
			RETURN 0

		SELECTCOM = RESULT
		TRYCALLFORM COM_ABLE{SELECTCOM}

		SIF RESULT == 0
			RETURN 0

		;主導権が無いフラグを解除
		CLEARBIT FLAG:99, 11

		REDRAW 1

		DOTRAIN SELECTCOM
	ELSE
		CALL NO_SELECTCOM, LOCAL
		LOCAL = RESULT

		SELECTCASE LOCAL
		CASE 999
			CLEARLINE LINECOUNT - TFLAG:31
			RETURN 0
		CASEELSE
			IF STRLENS(TRAINNAME:LOCAL) == 0
				CLEARLINE LINECOUNT - TFLAG:31
				RETURN 0
			ENDIF

		 	SELECTCASE TRAINNAME:LOCAL
			CASE "〜予備〜"
				CLEARLINE LINECOUNT - TFLAG:31
				RETURN 0
			ENDSELECT
		ENDSELECT

		DITEMTYPE:0:LOCAL = (DITEMTYPE:0:LOCAL + 1)%3

		SELECTCASE LOCAL
		CASE 0 TO 9, 60, 61, 65, 71, 75, 80 TO 95, 98, 99, 230 TO 289
			SIF DITEMTYPE:0:LOCAL == 2
				DITEMTYPE:0:LOCAL = 0
		ENDSELECT
	ENDIF
;調教コマンドの種類ごとの表示ＯＮＯＦＦ
ELSEIF LOCAL >= 300 && LOCAL <= 313
	INVERTBIT FLAG:210, LOCAL - 300
	CLEARLINE LINECOUNT - TFLAG:31
	RETURN 1
;表示コマンド群の反転[320]
ELSEIF LOCAL == 320
	FLAG:210 = INVERTBITS(FLAG:210, 0, 13)
	CLEARLINE LINECOUNT - TFLAG:31
	RETURN 1
;調教コンフィグモードへ[888]
ELSEIF LOCAL == 888
	TFLAG:103 = LOCAL
	INVERTBIT FLAG:210, 20
;項目表示フィルタ[900]
ELSEIF LOCAL == 900
	IF CONFIG("項目表示フィルタ：Ｂ")
		CLEARBIT FLAG:210, 30
		SETBIT FLAG:210, 31
	ELSEIF CONFIG("項目表示フィルタ：Ｃ")
		CLEARBIT FLAG:210, 31
	ELSE
		SETBIT FLAG:210, 30
	ENDIF
;調教終了[999]
ELSEIF LOCAL == 999 && COND("調教終了可能")
	REDRAW 1
	BEGIN AFTERTRAIN
ELSEIF CONFIG("調教コンフィグモード") == 0
	;アルカナ[340]
	IF LOCAL == 340
		DOTRAIN 500
	;アイテム[341]
	ELSEIF LOCAL == 341
		DOTRAIN 501
	;非表示コマンドを表示[350]
	ELSEIF LOCAL == 350
		INVERTBIT FLAG:210, 21
		CLEARLINE LINECOUNT - TFLAG:31
	;能力表示[400]
	ELSEIF LOCAL == 400
		CALL NEW_PRINT_STATE, TARGET, "通常"
	;汚れ表示[410]
	ELSEIF LOCAL == 410
		CALL STAIN_INFO
	;反撃するか選択[420]
	ELSEIF LOCAL == 420 && PLAYER == MASTER
		IF CONFIG("ＨＡＲＤ")
			PRINTFORMW 難易度がHARDだと選択できません
			RETURN 0
		ELSEIF TALENT:恋慕 == 0
			PRINTFORMW 現在の調教対象が[恋慕]の時に限り選択できます
			RETURN 0
		ELSEIF CFLAG:9 == 1
			PRINTFORMW %CALLNAME:TARGET%とお互いに愛し合うことにした。
		ELSEIF CFLAG:9 == 0
			PRINTFORMW %CALLNAME:TARGET%を思いのままに可愛がることにした。
		ENDIF
		INVERTBIT CFLAG:9, 0
	;交代[430]
	ELSEIF LOCAL == 430 && CHECK_EXCHANGE("調教者")
		CALL SETFLAG, "調教者交代", 1
		CLEARLINE LINECOUNT - TFLAG:31
	;TARGETとTARGET:1(いないならASSI)を交換[431]
	ELSEIF LOCAL == 431 && CHECK_EXCHANGE("調教対象")
		CALL SETFLAG, "対象交代"
		CLEARLINE LINECOUNT - TFLAG:31
	;宝珠取得予定数表示[440]
	ELSEIF LOCAL == 440
		CALL SHOW_WILLGET_JUEL
	ENDIF
ELSE
	TFLAG:103 = LOCAL
	;[360]〜は各種調教フィルタ
	IF LOCAL == 360
		INVERTBIT FLAG:209, 0
	ELSEIF LOCAL == 361
		INVERTBIT FLAG:209, 1
	ELSEIF LOCAL == 362
		INVERTBIT FLAG:209, 4
	ELSEIF LOCAL == 363
		INVERTBIT FLAG:209, 5
	ELSEIF LOCAL == 364
		INVERTBIT FLAG:209, 6
	ELSEIF LOCAL == 365
		INVERTBIT FLAG:209, 7
	;[370]〜は調教画面表示の設定
	ELSEIF LOCAL == 370
		SELECTCASE GETBIT(FLAG:98, 0) + GETBIT(FLAG:98, 4)*1p4 + GETBIT(FLAG:98, 5)*1p5
		CASE 0
			SETBIT FLAG:98, 5
		CASE 1p5
			SETBIT FLAG:98, 4
		CASE 1p4 + 1p5
			SETBIT FLAG:98, 0
			CLEARBIT FLAG:98, 4
		CASE 1p0 + 1p5
			SETBIT FLAG:98, 4
		CASE 1p0 + 1p4 + 1p5
			CLEARBIT FLAG:98, 0
			CLEARBIT FLAG:98, 4
			CLEARBIT FLAG:98, 5
		ENDSELECT
	ELSEIF LOCAL == 371
		INVERTBIT FLAG:98, 2
	ELSEIF LOCAL == 372
		INVERTBIT FLAG:98, 3
	ELSEIF LOCAL == 373
		INVERTBIT FLAG:98, 1
	ELSEIF LOCAL == 374
		INVERTBIT FLAG:98, 6
	ELSEIF LOCAL == 375
		INVERTBIT FLAG:98, 7
	;射精モード選択[380]
	ELSEIF LOCAL == 380
		CALL SETCONFIG, "射精箇所の変更"
	;調教コマンドの全表示[890]
	ELSEIF LOCAL == 890
		INVERTBIT FLAG:210, 45
	;青緑コマンド：全表示[891]
	ELSEIF LOCAL == 891
		IF CONFIG("調教コンフィグモード：非表示コマンドを隠す")
			CLEARBIT FLAG:210, 40
			SETBIT FLAG:210, 41
		ELSEIF CONFIG("調教コンフィグモード：禁止コマンドを隠す")
			CLEARBIT FLAG:210, 41
		ELSE
			SETBIT FLAG:210, 40
		ENDIF
	ENDIF
ENDIF

SIF CONFIG("調教コンフィグモード")
	CLEARLINE LINECOUNT - TFLAG:31
