CALL SETFLAG, "ターン終了", MASTER
IF ASSI
	CALL SETFLAG, "ターン終了", ASSI
	;助手経験
	IF TEQUIP:押し倒し == 0 && PLAYER != ASSI && RAND:2
		EXP:ASSI:助手经验 += 1
		SIF TALENT:ASSI:聪慧 && RAND:2
			EXP:ASSI:助手经验 += 1
		SIF TALENT:ASSI:糊涂 && RAND:2
			EXP:ASSI:助手经验 -= 1
	ENDIF

	;相性の変動(とりあえずは上昇のみ)。絶頂していなくても上昇します。
	IF (NOWEX:絶頂数合計 + NOWEX:射精 + NOWEX:噴乳 + NOWEX:絶頂お漏らし >= RAND:10 && ASSIPLAY) || (COND("絶頂", PLAYER) >= RAND:4 && TEQUIP:Ｗ押し倒し && TARGET:1 == ASSI)
