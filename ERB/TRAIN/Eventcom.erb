;インサート中はモード継続してみる
IF INSERT("インサート") == 0
	SELECTCASE SELECTCOM
	;キス、挿入局所責めなどは値を変更させない。アイテムとアルカナも変更しないことに
	CASE 6, 65 TO 68, 230 TO 279, 282, 301, 311
	;同じ調教者で連続選択時のみキス継続
	CASE 0, 2, 5, 7, 8, 10, 15, 16, 60 TO 79, 83 TO 88, 90, 93, 94, 97, 105, 120 TO 129, 130, 176 TO 177, 280, 281, 300, 301, 311
		;調教者が変わるとダメ
		SIF COND("前Ｔ調教者") != PLAYER
			TEQUIP:亲吻 = 0

		;前のターンのコマンド次第でダメ
		SELECTCASE PREVCOM
		;キスならOK
		CASE 6
		;連続実行ならOK
		CASE SELECTCOM
		CASEELSE
			SELECTCASE SELECTCOM
			;インサート中はモード継続してみる
			CASE 60 TO 79
			CASEELSE
				SIF PREVPLAY("インサート") == 0
					TEQUIP:亲吻 = 0
			ENDSELECT
		ENDSELECT
	CASEELSE
		TEQUIP:亲吻 = 0
	ENDSELECT
ENDIF

