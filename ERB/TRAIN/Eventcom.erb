	CASE 145
		SIF TEQUIP:押し倒し
			SELECTCOM = 504
	;アルカナ使用
	CASE 500
		CALL USE_ARUKANA_TRAIN
	;アイテム使用
	CASE 501
		CALL USE_ITEM_TRAIN
	ENDSELECT
