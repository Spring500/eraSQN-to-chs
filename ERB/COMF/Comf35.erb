@TRAIN_MESSAGE_COM35
IF TEQUIP:ニプルキャップ
	CALL COM_ABLE34
	IF RESULT && TEQUIP:クリキャップ
		PRINTFORML クリキャップも外しますか？
		PRINTFORML [ 0] はい
		PRINTFORML [ 1] いいえ
		CALL INPUT_SELECT, 2
		IF RESULT == 0
			PRINTFORMW %CALLNAME:TARGET%からクリキャップとニプルキャップを取り外した…
			TEQUIP:クリキャップ = 0
			TEQUIP:ニプルキャップ = 0
			RETURN 1
		ENDIF
	ENDIF
	PRINTFORMW %CALLNAME:TARGET%の乳首からニプルキャップを取り外した…
	TEQUIP:ニプルキャップ = 0
ELSE
	CALL COM_ABLE34
	IF RESULT && TEQUIP:クリキャップ == 0
		PRINTFORML クリキャップも付けますか？
		PRINTFORML [ 0] はい
		PRINTFORML [ 1] いいえ
		CALL INPUT_SELECT, 2
		IF RESULT == 0
			PRINTFORMW %CALLNAME:TARGET%にクリキャップとニプルキャップを取りつけた
			PRINTFORMW 二種類の淫具は%CALLNAME:TARGET%の敏感な場所を執拗に責めて快楽を与えている…
			TEQUIP:クリキャップ = 1
			TEQUIP:ニプルキャップ = 1
			RETURN 1
		ENDIF
	ENDIF
	PRINTFORMW %CALLNAME:TARGET%の乳首に細かく振動するキャップを取り付けた
	PRINTFORMW 一見ニプレスの様なそれは肌にぴったりと張り付き、%CALLNAME:TARGET%の乳首に甘い快楽をもたらしている…
	TEQUIP:ニプルキャップ = 1
ENDIF

@TRAIN_MESSAGE_COM204
IF TEQUIP:ニプルキャップ
	PRINTFORMW 触手は%CALLNAME:TARGET%の乳首から離れた…
	TEQUIP:ニプルキャップ = 0
ELSE
	IF RAND:2 == 0 && CALCF("Ｂ発情")
		PRINTFORMW 細かく蠢く触手が%CALLNAME:TARGET%の乳首を弄り始めた…
	ELSE
		PRINTFORMW 大きく口を開けた触手が%CALLNAME:TARGET%の乳首に吸い付いた…
	ENDIF
	TEQUIP:ニプルキャップ = 1
	CALL ADD_STAIN, TARGET, "Ｂ", "触手"
ENDIF

