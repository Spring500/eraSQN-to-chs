@TRAIN_MESSAGE_COM306
IF STATE("ハードスキン", PLAYER)
	IF NO:PLAYER == 34
		PRINTFORM %CALLNAME:PLAYER%は
	ELSEIF NO:TARGET == 34
		PRINTFORM %CALLNAME:TARGET%は
	ELSE
		PRINTFORM %CALLNAME:ASSI%は
	ENDIF
	PRINTFORMW ハードスキンの効果を解除した…
ELSE
	IF NO:PLAYER == 34
		PRINTFORMW %CALLNAME:PLAYER%は肌を石のように硬くした！
	ELSEIF NO:TARGET == 34
		PRINTFORMW %CALLNAME:TARGET%は%CALLNAME:PLAYER%を石のように硬くした！
	ELSE
		PRINTFORMW %CALLNAME:ASSI%は肌を石のように硬くした！
	ENDIF
	PRINTFORMW %CALLNAME:PLAYER%\@ ASSI ? 達 # \@は快感を受けにくくなった！
	IF PENIS(MASTER)
		PRINTFORM %CALLNAME:MASTER%
		IF ASSI
			SIF PENIS(ASSI)
				PRINT 達
		ENDIF
		PRINTFORM のペニスがさらに硬くな
		IF INSERT("インサート")
			PRINTFORMW り、%CALLNAME:TARGET%の肉壁をその形に拡げる…！
		ELSE
			PRINTFORMW った！
		ENDIF
	ELSEIF ASSI
		IF PENIS(ASSI)
			PRINTFORM %CALLNAME:ASSI%のペニスがさらに硬くな
			IF INSERT("インサート")
				PRINTFORMW り、%CALLNAME:TARGET%の肉壁をその形に拡げる…！
			ELSE
				PRINTFORMW った！
			ENDIF
		ENDIF
	ENDIF
ENDIF


