PRINTL 針

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:0 = 針

RETURN 1

@FLAG_COM132, ARG
SIF TALENT:PLAYER:針さばき
		CALL SETFLAG, "針さばきフラグ", TARGET

@SOURCE_COM132, ARG
VARSET LOCAL

LOCAL:20 += 100
LOCAL:21 += 100

LOCAL:14 = 1000

;PALAM:苦痛をみる
SELECTCASE PALAM:苦痛
CASE IS < PALAMLV:1
	LOCAL:6 = 3000
CASE IS < PALAMLV:2
	LOCAL:6 = 3300
CASE IS < PALAMLV:3
	LOCAL:6 = 3600
CASE IS < PALAMLV:4
	LOCAL:6 = 4000
CASE IS >= PALAMLV:4
	LOCAL:6 = 4500
ENDSELECT

LOCAL:13 += LOCAL:6/2

;針さばき
IF TALENT:PLAYER:針さばき
	LOCAL:9 = LOCAL:6/2
	LOCAL:13 += LOCAL:6/3
ENDIF

CALL SOURCE_SMPLAY, "針", ARG

CALL CALC, "調教ソース", LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12, LOCAL:13, LOCAL:14, LOCAL:15, LOCAL:16, LOCAL:17, LOCAL:18, LOCAL:19, LOCAL:20, LOCAL:21, ARG


@TRAIN_MESSAGE_COM132
PRINTFORM %CALLNAME:TARGET%の
IF TALENT:オトコ
	PRINT 身体に
ELSE
	PRINT 乳首やクリトリスに
ENDIF
IF TALENT:PLAYER:針さばき || TALENT:PLAYER:サド
	PRINTW 容赦なく針を突き刺した…
ELSE
	PRINTW 針を突きたてた…
ENDIF


@EVENT_COM132
IF TALENT:PLAYER:針さばき == 0
	IF ABL:PLAYER:技巧 > RAND:100
		PRINTL 
		PRINTFORML %CALLNAME:PLAYER%は効果的な針の扱いのコツを掴んだ。
		PRINTFORMW %CALLNAME:PLAYER%は【%TALENTNAME:53%】を得た。
		TALENT:PLAYER:針さばき = 1
	ENDIF
ELSEIF TALENT:PLAYER:針さばき


ENDIF
