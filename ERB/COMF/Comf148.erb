	LOCAL:20 += 100
	LOCAL:21 += 300
	LOCAL:6 += 17000
	LOCAL:13 += 9000
	LOCAL:14 += 17000
ELSEIF COND("ラビアピアスフラグ")
	LOCAL:20 += 100
	LOCAL:21 += 200
	LOCAL:6 += 7000
	LOCAL:13 += 9000
	LOCAL:14 += 12000
