IF COND("クリピアスフラグ") + COND("ラビアピアスフラグ") && !CHECK_CLO("Ｖ露出")
	CALL SET_PANTIES, TARGET
	CALL SET_BODYS, TARGET
	CALL SET_OUTER, TARGET
ENDIF

STAIN:PLAYER:手 = 0
IF COND("クリピアスフラグ")
	STAIN:Ｖ = SET_STAIN(0, "Ｖ")
ELSEIF COND("ラビアピアスフラグ")
	STAIN:Ｖ = SET_STAIN(0, "Ｖ")
ELSEIF COND("ニプルピアスフラグ")
	STAIN:Ｂ = 0
ENDIF

