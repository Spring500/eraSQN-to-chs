@COM_ABLE304
;ドラ姦
SIF COMABLE_DEF(304)
	RETURN 0
;調教相手、あるいは助手かMASTERがドラグーンじゃないと実行できない。
IF  ASSI
	SIF TALENT:龙骑兵 + TALENT:ASSI:龙骑兵 + TALENT:MASTER:龙骑兵 == 0
		RETURN 0
ELSE
	SIF TALENT:龙骑兵 + TALENT:MASTER:龙骑兵 == 0
		RETURN 0
ENDIF
;押し倒されていると、逆ドラ姦
IF TEQUIP:推到
	;調教相手がドラグーンでない
	SIF TALENT:龙骑兵 == 0
		RETURN 0
	;PLAYERが処女orオトコor妖精
	SIF TALENT:PLAYER:处女 + TALENT:PLAYER:男性 + TALENT:PLAYER:妖精
		RETURN 0
	;調教相手がサド度が低い
	SIF ABL:施虐倾向 < 5
		RETURN 0
;押し倒されてない
ELSE
	;アソコ使用判定
	SIF USE_V(TARGET) == 0
		RETURN 0
	;処女はダメ
	SIF TALENT:处女 == 1
		RETURN 0
	;ローター挿入中はダメ
	SIF TEQUIP:跳蛋插入
		RETURN 0
	;妖精だとダメ
	SIF TALENT:妖精
		RETURN 0
	;Ｖ拡張LVがドラゴンのサイズに匹敵していないと実行できない。サドは補正あり
	SIF 5 - ABL:Ｖ扩张 - TALENT:PLAYER:抖Ｓ * 2 >= 2
		RETURN 0
	;触手調教中はダメ
	SIF TEQUIP:触手
		RETURN 0
	;お風呂場プレイ中はプレイマットが無いとダメ
	IF TEQUIP:沐浴Play
		SIF ITEM:地垫 == 0 && NOITEM == 0
			RETURN 0
	ENDIF
ENDIF
RETURN 1

