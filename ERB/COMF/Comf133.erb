@FLAG_COM133, ARG

@SOURCE_COM133, ARG
VARSET LOCAL

LOCAL:20 += 0
;緊縛経験が高いと消費減少
SELECTCASE EXP:緊縛経験
CASE IS < EXPLV:3
	LOCAL:21 += 150
CASE IS < EXPLV:4
	LOCAL:21 += 120
CASEELSE
	LOCAL:21 += 90
ENDSELECT

LOCAL:11 = 250
LOCAL:12 = 1000
LOCAL:14 = 500

;PALAM:欲情をみる
SELECTCASE PALAM:欲情
CASE IS < PALAMLV:1
	TIMES LOCAL:11 , 0.60
CASE IS < PALAMLV:2
	TIMES LOCAL:11 , 0.80
CASE IS < PALAMLV:3
CASE IS < PALAMLV:4
	TIMES LOCAL:11 , 1.20
CASE IS >= PALAMLV:4
	TIMES LOCAL:11 , 1.40
ENDSELECT

;ABL:従順をみる
SELECTCASE ABL:従順
CASE 0
	TIMES LOCAL:11 , 0.40
CASE 1
	TIMES LOCAL:11 , 0.60
CASE 2
	TIMES LOCAL:11 , 0.80
CASE 3
	TIMES LOCAL:11 , 1.00
CASE 4
	TIMES LOCAL:11 , 1.10
CASEELSE
	TIMES LOCAL:11 , 1.20
ENDSELECT

;ABL:マゾっ気をみる
SELECTCASE ABL:マゾっ気
CASE 0
	TIMES LOCAL:11 , 0.80
CASE 1
	TIMES LOCAL:11 , 1.00
CASE 2
	TIMES LOCAL:11 , 1.30
CASE 3
	TIMES LOCAL:11 , 1.60
CASE 4
	TIMES LOCAL:11 , 2.00
CASEELSE
	TIMES LOCAL:11 , 3.00
ENDSELECT

;倒錯的
SIF TALENT:倒錯的
	TIMES LOCAL:11 , 2.00
;臆病
SIF TALENT:臆病
	TIMES LOCAL:14 , 2.00

CALL SOURCE_SMPLAY, "アイマスク", ARG

CALL CALC, "調教ソース", LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12, LOCAL:13, LOCAL:14, LOCAL:15, LOCAL:16, LOCAL:17, LOCAL:18, LOCAL:19, LOCAL:20, LOCAL:21, ARG


