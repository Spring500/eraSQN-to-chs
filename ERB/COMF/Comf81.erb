VARSET LOCAL

LOCAL:20 += 50
LOCAL:21 += 100

LOCAL:13 = 3000
LOCAL:14 = 900

;ABL:奉仕精神をみる
SELECTCASE ABL:奉仕精神
CASE 0
	LOCAL:4 = 420
	LOCAL:5 = 150
	LOCAL:8 = 400
CASE 1
	LOCAL:4 = 500
	LOCAL:5 = 300
	LOCAL:8 = 300
CASE 2
	LOCAL:4 = 580
	LOCAL:5 = 600
	LOCAL:8 = 150
CASE 3
	LOCAL:4 = 660
	LOCAL:5 = 900
	LOCAL:8 = 50
