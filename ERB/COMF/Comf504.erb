@COM504
;逆剃毛

PRINTL 逆剃毛

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:0 = 逆剃毛

RETURN 1

@FLAG_COM504, ARG
CALL SETFLAG, "剃毛フラグ", PLAYER
;上手だと、日付が0になります
SIF ABL:技巧 < 4 && COND("阴毛", PLAYER) > 3
	BASE:PLAYER:阴毛 += 5

;調教者のＰorＶ⇔夢魔の指の汚れが移動
SIF PENIS(PLAYER)
	CALL EQ_STAIN, TARGET, PLAYER, 1, 2
SIF TALENT:PLAYER:男性 == 0
	CALL EQ_STAIN, TARGET, PLAYER, 1, 3


@SOURCE_COM504, ARG
VARSET LOCAL

LOCAL:20 += 50
LOCAL:21 += 100

;欲情(LOCAL:11) 　0〜5000
LOCAL:11 = 2000
;達成感(LOCAL:5)　1000〜5000
LOCAL:5 = 1000
;逸脱(LOCAL:14)　2000
LOCAL:14 = 1000

SELECTCASE COND("阴毛", PLAYER)
CASE 3
	LOCAL:5 += 1000
	LOCAL:14 += 1000
CASE 2
	LOCAL:5 += 1500
	LOCAL:14 += 2000
ENDSELECT

;ABL:施虐倾向をみる
SELECTCASE ABL:施虐倾向
CASE 0
	TIMES LOCAL:11 , 0.00
	TIMES LOCAL:5 , 1.50
	TIMES LOCAL:14 , 2.00
CASE 1
	TIMES LOCAL:11 , 0.10
	TIMES LOCAL:5 , 1.20
	TIMES LOCAL:14 , 1.50
CASE 2
	TIMES LOCAL:11 , 0.40
CASE 3
	TIMES LOCAL:11 , 0.80
	TIMES LOCAL:5 , 0.70
	TIMES LOCAL:14 , 0.70
CASE 4
	TIMES LOCAL:11 , 1.20
	TIMES LOCAL:5 , 0.60
	TIMES LOCAL:14 , 0.40
CASEELSE
	TIMES LOCAL:11 , 1.50
	TIMES LOCAL:5 , 0.30
	TIMES LOCAL:14 , 0.10
ENDSELECT

CALL CALC, "調教ソース", LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12, LOCAL:13, LOCAL:14, LOCAL:15, LOCAL:16, LOCAL:17, LOCAL:18, LOCAL:19, LOCAL:20, LOCAL:21, ARG


@TRAIN_MESSAGE_COM504
IF TALENT:PLAYER:男性
	PRINTFORMW %CALLNAME:TARGET%は%CALLNAME:PLAYER%を押さえつけて、陰毛を剃り始めた…
ELSE
	PRINTFORMW %CALLNAME:TARGET%は%CALLNAME:PLAYER%の股間を押し開いて、アソコの毛を剃り始めた。
ENDIF

IF ABL:技巧 >= 4 && RAND:5 == 0
	PRINTFORM %CALLNAME:PLAYER%は陰毛を
	SIF ABL:技巧 >= 5
		PRINT 念入りに
	PRINTW 脱毛されてしまった…
	BASE:PLAYER:阴毛 = 200
	DOWNBASE:体力 += 30
	DOWNBASE:气力 += 80
ELSEIF ABL:技巧 >= 3 && RAND:2 == 0 && COND("阴毛", PLAYER) >= 6
	PRINTFORM %CALLNAME:TARGET%は
	SIF ABL:技巧 >= 4
		PRINT 上手に
	PRINTFORMW %CALLNAME:PLAYER%の陰毛の形を整えました…
	BASE:PLAYER:阴毛 = 500
ELSE
	PRINTFORM %CALLNAME:TARGET%は
	IF ABL:技巧 >= 4
		PRINT 丁寧に
	ELSEIF ABL:技巧 <= 2 && RAND:2 == 0
		PRINT ちょっと失敗してしまったようで、結局
	ENDIF
	PRINTFORMW %CALLNAME:PLAYER%の陰毛を剃り落としてツルツルにしました…
	BASE:PLAYER:阴毛 = 300
ENDIF
