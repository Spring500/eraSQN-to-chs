;飲む量をTFLAG:16で管理
IF ITEM:精液貯蓄量 >= 6 && CALCF("精液好き度") >= 4
	CALL LOOP_DRINK147
ELSE
	IF CHECK_SHIRT("和服") + CHECK_SHIRT("巫女服")
		PRINTFORM %CALLNAME:PLAYER%は檜の香りのする枡に精液を
	ELSE
		PRINTFORM %CALLNAME:PLAYER%はワイングラスに精液を
	ENDIF
	TFLAG:16 = 3
ENDIF

IF CALCF("精液好き度") >= TFLAG:16 + 2 && ITEM:精液貯蓄量 >= TFLAG:16 + 2
	PRINT 溢れんばかりに
	TFLAG:16 += 2
;ELSEIF CALCF("精液好き度") <= TFLAG:16 - 2
;	PRINT たっぷりと
;	TFLAG:16 -= 2
ENDIF

;魔法瓶の中の量がＭＡＸ
SIF ITEM:精液貯蓄量 <= TFLAG:16
	TFLAG:16 = ITEM:精液貯蓄量
SIF TFLAG:16 >= CALCF("精液好き度")
	TFLAG:16 = CALCF("精液好き度")
PRINTFORMW 注いで、%CALLNAME:TARGET%に手渡した。
PRINTFORM %CALLNAME:TARGET%は
IF ABL:精液中毒 == 0
	PRINT 口の中に溜めた唾液を利用して、なんとか
ELSEIF ABL:精液中毒 < 3
	PRINT 
ELSEIF ABL:精液中毒 < 5
	IF RAND:3 && CALCF("精液好き度") > TFLAG:16
		PRINT 涼しい顔で
	ELSE
		PRINT ゴクゴクと喉を鳴らしながら
	ENDIF
ELSE
	IF RAND:3 && CALCF("精液好き度") > TFLAG:16
		PRINT なんとも美味しそうに
	ELSE
		PRINT 味わいながら
	ENDIF
ENDIF
PRINTFORMW 精液を飲み干していく…


@LOOP_DRINK147
PRINTFORML どれに注ぎますか？
IF CHECK_SHIRT("和服") + CHECK_SHIRT("巫女服")
	PRINTL [0] 枡
ELSE
	PRINTL [0] ワイングラス
ENDIF
SIF ITEM:精液貯蓄量 >= 6 && CALCF("精液好き度") >= 4
	PRINTL [1] ビールジョッキ
IF ITEM:精液貯蓄量 >= 10 && CALCF("精液好き度") >= 8
	PRINTL [2] PETボトル
	CALL INPUT_SELECT, 3
ELSE
	CALL INPUT_SELECT, 2
ENDIF

IF RESULT == 0
	IF CHECK_SHIRT("和服") + CHECK_SHIRT("巫女服")
		PRINTFORM %CALLNAME:PLAYER%は檜の香りのする枡に精液を
	ELSE
		PRINTFORM %CALLNAME:PLAYER%はワイングラスに精液を
	ENDIF
	TFLAG:16 = 3
ELSEIF RESULT == 1
	PRINTFORM %CALLNAME:PLAYER%は大きなジョッキに精液を
	TFLAG:16 = 6
ELSEIF RESULT == 2
	PRINTFORM %CALLNAME:PLAYER%はPETボトルに精液を
	TFLAG:16 = 10
ENDIF


@COM_ORDER_COM147, ARG
VARSET LOCAL
LOCALS = 

;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER, ARG

LOCAL = RESULT

;ABL:奉仕精神
IF ABL:奉仕精神
	LOCAL += ABL:奉仕精神 * 4
	LOCALS = %LOCALS% + %ABLNAME:6%LV{ABL:奉仕精神}({ABL:奉仕精神 * 4})
ENDIF
;ABL:精液中毒
IF ABL:精液中毒
	LOCAL += ABL:精液中毒 * 3
	LOCALS = %LOCALS% + %ABLNAME:11%LV{ABL:精液中毒}({ABL:精液中毒 * 3})
ENDIF
;恥じらい
IF TALENT:恥じらい
	LOCAL -= 3
	LOCALS = %LOCALS% - %TALENTNAME:35%(3)
ENDIF
;献身的
