@FLAG_COM147, ARG
;夢魔の口に精液汚れ追加
CALL ADD_STAIN, TARGET, "Ｍ", "精液"

@SOURCE_COM147, ARG
VARSET LOCAL

;関係するのは、欲望+奉仕精神と精液中毒と、EXP:精液経験 精液経験。

LOCAL:20 += 10
LOCAL:21 += 50

LOCAL:8 = TFLAG:16 * 200
LOCAL:7 = TFLAG:16 * 300
LOCAL:13 = TFLAG:16 * 500
LOCAL:14 = TFLAG:16 * 300

SIF CALCF("精液好き度") > TFLAG:16
	TIMES LOCAL:13 , 1.50

;精液経験をみる
SELECTCASE EXP:精液経験
CASE IS < 5
	TIMES LOCAL:14 , 4.00
CASE IS < 20
	TIMES LOCAL:14 , 2.00
CASE IS < 50
	TIMES LOCAL:14 , 1.50
CASE IS < 100
	TIMES LOCAL:14 , 1.20
CASE IS < 300
	TIMES LOCAL:14 , 1.00
CASEELSE
	TIMES LOCAL:14 , 0.50
ENDSELECT

;ABL:精液中毒をみる
SELECTCASE ABL:精液中毒
CASE 0
	TIMES LOCAL:7 , 0.10
	TIMES LOCAL:13 , 0.50
CASE 1
	TIMES LOCAL:7 , 1.00
	TIMES LOCAL:13 , 1.00
CASE 2
	TIMES LOCAL:7 , 1.20
	TIMES LOCAL:13 , 1.30
CASE 3
	TIMES LOCAL:7 , 1.40
	TIMES LOCAL:13 , 1.60
CASE 4
	TIMES LOCAL:7 , 1.80
	TIMES LOCAL:13 , 2.00
CASEELSE
	TIMES LOCAL:7 , 2.00
	TIMES LOCAL:13 , 3.00
ENDSELECT

;夢魔
IF TALENT:夢魔 || TALENT:上位夢魔
	LOCAL:8 = 0
	TIMES LOCAL:7 , 2.00
	TIMES LOCAL:13 , 1.50
	TIMES LOCAL:14 , 0.10
ENDIF

CALL SOURCE_SMPLAY, "精飲", ARG

CALL CALC, "調教ソース", LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12, LOCAL:13, LOCAL:14, LOCAL:15, LOCAL:16, LOCAL:17, LOCAL:18, LOCAL:19, LOCAL:20, LOCAL:21, ARG


