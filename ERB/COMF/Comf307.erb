@FLAG_COM307, ARG
;アソコを露出させる
SIF CHECK_CLO("Ｖ露出") == 0
	CALL SETFLAG, "ボトムを露出：テキスト無し", TARGET
;対象のＶ⇔調教者の手？の汚れが移動
CALL EQ_STAIN, TARGET, PLAYER, 3, 1

@SOURCE_COM307, ARG
VARSET LOCAL

LOCAL:20 += 40
LOCAL:21 += 150

;それぞれ、Ｖ潤、露出、逸脱
LOCAL:10 = 1000
LOCAL:12 = 1000
LOCAL:14 = 1000

;触手経験者なら、逸脱が少なめ
SIF EXP:触手经验
	TIMES LOCAL:14 , 0.50

;ABL:Ｖ感觉をみる
LOCAL:1 = CALCF("Ｖ刺激", 2)
SELECTCASE ABL:Ｖ感觉
CASE 0
	LOCAL:3 = 50
CASE 1
	LOCAL:3 = 80
CASE 2
	LOCAL:3 = 150
CASE 3
	LOCAL:3 = 200
CASE 4
	LOCAL:3 = 300
CASEELSE
	LOCAL:3 = 500
ENDSELECT

;貞操観念
IF TALENT:看重贞操
	IF TALENT:处女 == 1
		TIMES LOCAL:3 , 0.60
		LOCAL:15 = 5000
	ELSE
		TIMES LOCAL:3 , 0.60
		LOCAL:15 = 500
	ENDIF
ENDIF

;ABL:服从をみる
SELECTCASE ABL:服从
CASE 0
	TIMES LOCAL:3 , 0.60
	TIMES LOCAL:15 , 2.00
CASE 1
	TIMES LOCAL:3 , 0.80
	TIMES LOCAL:15 , 1.50
CASE 2
	TIMES LOCAL:3 , 1.00
	TIMES LOCAL:15 , 1.00
CASE 3
	TIMES LOCAL:3 , 1.20
	TIMES LOCAL:15 , 0.80
CASE 4
	TIMES LOCAL:3 , 1.40
	TIMES LOCAL:15 , 0.60
CASEELSE
	TIMES LOCAL:3 , 1.60
	TIMES LOCAL:15 , 0.30
ENDSELECT

CALL CALC, "調教ソース", LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12, LOCAL:13, LOCAL:14, LOCAL:15, LOCAL:16, LOCAL:17, LOCAL:18, LOCAL:19, LOCAL:20, LOCAL:21, ARG


