@FLAG_COM308, ARG
;アナルを露出させる
SIF CHECK_CLO("Ａ露出") == 0
	CALL SETFLAG, "ボトムを露出：テキスト無し", TARGET
;対象のＡ⇔調教者の手？の汚れが移動
CALL EQ_STAIN, TARGET, PLAYER, 4, 1

@SOURCE_COM308, ARG
VARSET LOCAL

LOCAL:20 += 100
LOCAL:21 += 200

LOCAL:6 = 100
LOCAL:8 = 800
LOCAL:10 = 2000
LOCAL:12 = 2000
LOCAL:14 = 2000

;ABL:Ａ感觉をみる
LOCAL:2 = CALCF("Ａ刺激", 2)
SELECTCASE ABL:Ａ感觉
CASE 0
	LOCAL:3 = 10
	LOCAL:13 = 100
CASE 1
	LOCAL:3 = 30
	LOCAL:13 = 700
CASE 2
	LOCAL:3 = 100
	LOCAL:13 = 1500
CASE 3
	LOCAL:3 = 200
	LOCAL:13 = 3000
CASE 4
	LOCAL:3 = 450
	LOCAL:13 = 5000
CASEELSE
	LOCAL:3 = 750
	LOCAL:13 = 8000
ENDSELECT

;EXP:Ａ经验をみる
SELECTCASE EXP:Ａ经验
CASE IS >= 300
	TIMES LOCAL:2, 1.60
	TIMES LOCAL:6, 0.50
	TIMES LOCAL:9, 0.20
	TIMES LOCAL:14, 0.20
CASE IS >= 150
	TIMES LOCAL:2, 1.40
	TIMES LOCAL:6, 0.60
	TIMES LOCAL:9, 0.40
	TIMES LOCAL:14, 0.60
CASE IS >= 50
	TIMES LOCAL:2, 1.20
	TIMES LOCAL:6, 0.80
	TIMES LOCAL:9, 0.70
CASE IS >= 20
	TIMES LOCAL:14, 1.20
CASE IS >= 5
	TIMES LOCAL:2, 0.50
	TIMES LOCAL:6, 1.50
	TIMES LOCAL:9, 1.50
	TIMES LOCAL:14, 1.50
CASEELSE
	TIMES LOCAL:2, 0.10
	TIMES LOCAL:6, 2.00
	TIMES LOCAL:9, 2.00
	TIMES LOCAL:14, 2.00
ENDSELECT

;Ａ敏感、鈍感をみる
;快Ａ自体のチェックは後でまとめてやる
IF TALENT:Ａ钝感
	TIMES LOCAL:6, 0.50
	TIMES LOCAL:11, 0.50
	TIMES LOCAL:13, 0.50
	TIMES LOCAL:14, 0.50
ELSEIF TALENT:Ａ敏感
	TIMES LOCAL:6, 1.50
	TIMES LOCAL:11, 1.50
	TIMES LOCAL:13, 1.50
	TIMES LOCAL:14, 1.50
ENDIF

;処女で貞操観念
SIF TALENT:处女 == 1 && TALENT:看重贞操
	LOCAL:14 /= 3

CALL CALC, "調教ソース", LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12, LOCAL:13, LOCAL:14, LOCAL:15, LOCAL:16, LOCAL:17, LOCAL:18, LOCAL:19, LOCAL:20, LOCAL:21, ARG


