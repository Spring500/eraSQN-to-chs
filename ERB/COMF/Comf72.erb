@COM72
;屈曲位アナル
CALL PRINT_TRAIN_NAME(SELECTCOM)

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:0 = %STR:2%

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK

RETURN 1

@FLAG_COM72, ARG
CALL FLAG_INSERTION, "Ａインサート", ARG, 120

@SOURCE_COM72, ARG
CALL SOURCE_INSERTION, "Ａインサート", ARG, 120

VARSET LOCAL

;露出、屈従のソース
LOCAL:12 = 4000
LOCAL:13 = 3000

;ABL:Ａ感覚をみる
IF ABL:Ａ感覚 == 0
	LOCAL:3 = 5
ELSEIF ABL:Ａ感覚 == 1
	LOCAL:3 = 15
ELSEIF ABL:Ａ感覚 == 2
	LOCAL:3 = 50
ELSEIF ABL:Ａ感覚 == 3
	LOCAL:3 = 100
ELSEIF ABL:Ａ感覚 == 4
	LOCAL:3 = 250
ELSE
	LOCAL:3 = 500
ENDIF

;ABL:Ａ感覚をみる
SELECTCASE ABL:Ａ感覚
CASE 0
	LOCAL:3 = 5
CASE 1
	LOCAL:3 = 15
CASE 2
	LOCAL:3 = 50
CASE 3
	LOCAL:3 = 100
CASE 4
	LOCAL:3 = 250
CASEELSE
	LOCAL:3 = 500
ENDSELECT

;PALAM:欲情をみる
SELECTCASE PALAM:欲情
CASE IS < PALAMLV:1
	TIMES LOCAL:3 , 0.30
CASE IS < PALAMLV:2
	TIMES LOCAL:3 , 0.60
CASE IS < PALAMLV:3
	TIMES LOCAL:3 , 1.00
CASE IS < PALAMLV:4
	TIMES LOCAL:3 , 1.50
CASE IS >= PALAMLV:4
	TIMES LOCAL:3 , 1.80
ENDSELECT

CALL CALC, "調教ソース", LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12, LOCAL:13, LOCAL:14, LOCAL:15, LOCAL:16, LOCAL:17, LOCAL:18, LOCAL:19, LOCAL:20, LOCAL:21, ARG


@TRAIN_MESSAGE_COM72
IF CHECK_COM("３Ｐ奉仕")
	CALL TRAIN_MESSAGE_3P
ELSEIF INSERT("Ａインサート") && SELECTCOM == PREVCOM && COND("前Ｔ調教者") == PLAYER
	PRINTFORM %CALLNAME:TARGET%の脚を大きく開かせた恥ずかしい体勢のまま、
	SIF (PENIS(PLAYER)) && STATE("ハードスキン", PLAYER)
		PRINT ガチガチのペニスに
	PRINTFORMW 体重を乗せて激しくアナルを犯した…
;前回と今回の調教者が同じで、抜かないフラグがある場合
ELSEIF INSERT("インサート") && COND("前Ｔ調教者") == PLAYER
	;セックスから移行
	IF INSERT("Ｖインサート")
		IF INSERT("正常位")
			PRINTFORM %CALLNAME:TARGET%をひっくり返して、膣から抜いた%NAMES("ペニス", PLAYER)%で
		ELSEIF INSERT("屈曲位")
			PRINTFORM 大股を開かされて腰を高く上げた体勢の%CALLNAME:TARGET%の前の穴から%NAMES("ペニス", PLAYER)%を引き抜き、
		ENDIF
		PRINTFORMW %TEXTS("アナル")%アナルを深々と貫いた…
	ELSEIF INSERT("屈曲位")
		IF TEQUIP:キス
			PRINTFORMW %CALLNAME:PLAYER%は%CALLNAME:TARGET%%TEXTS("キス継続助詞付き")%、再び腰を動かし始めた…
			CALL SETFLAG, "追加キスフラグ", TARGET
		;調教者がオトコかふたなりである
		ELSEIF PENIS(PLAYER)
			PRINTFORMW %CALLNAME:TARGET%の腸内の感触を味わいながら、再び腰を動かし始めた…
		ELSE
			PRINTFORMW %CALLNAME:TARGET%のアナルから抜かずに、再び腰を動かし始めた…
		ENDIF
	ELSEIF INSERT("正常位")
		PRINTFORMW %CALLNAME:TARGET%の脚を掴んでひっくり返し、アソコが顔の前に来るようにして犯しはじめた…
	ENDIF
ELSE
	PRINTFORM %CALLNAME:PLAYER%は
	IF COND("前Ｔから対象のみ変更") && PREVCOM:1 >= 60 && PREVCOM:1 <= 79
		CALL TEXT, "追加地の文：穴から穴へ"
		PRINTFORM %CALLNAME:TARGET%をひっくり返すと、
		IF PENIS(TARGET) && ABL:PLAYER:ＢＬっ気 >= 3
			PRINTFORM ペニスを眺めながら
		ELSEIF TALENT:オトコ == 0
			PRINTFORM アソコを眺めながら
		ENDIF
	;穴開きでないパンツをはいていて、ずらされていないなら、必ずずらす
	ELSEIF !CHECK_CLO("Ａ露出") && CHECK_CLO("Ａ露出可")
		PRINTFORM %CALLNAME:TARGET%の
		CALL SETFLAG, "ボトムを露出：テキスト有り", TARGET
		PRINTFORM 、恥ずかしいまんぐり返しの体勢を取らせて
	ELSE
		PRINTFORM %CALLNAME:TARGET%をひっくり返すと、
		IF TEQUIP:キス
			PRINTFORM 唇を奪いながら
			CALL SETFLAG, "追加キスフラグ", TARGET
		ELSEIF PENIS(TARGET) && ABL:PLAYER:ＢＬっ気 >= 3
			PRINTFORM ペニスを眺めながら
		ELSEIF TALENT:オトコ == 0
			PRINTFORM アソコを眺めながら
		ENDIF
	ENDIF
	PRINTFORM %TEXTS("アナル")%アナル
	IF TALENT:妊娠 && TALENT:PLAYER:サド == 0
		PRINTFORMW を普段通り激しく犯した…
	ELSE
		PRINTFORMW を奥深くまで犯しはじめた…
	ENDIF
ENDIF
