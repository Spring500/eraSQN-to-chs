@COM264
;排卵誘発剤

PRINTL 排卵誘発剤

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:0 = 排卵誘発剤

SIF TFLAG:16 == 1
	CALL KOJO_MESSAGE_COM

PREVCOM = SELECTCOM

RETURN 0

@TRAIN_MESSAGE_COM264
VARSET LOCAL
IF USEABLE_ITEM56(TARGET) && USEABLE_ITEM56(PLAYER)
	PRINTFORML 誰に排卵誘発剤を使用しますか？
	PRINTFORML  [ 0] %NAME:PLAYER%
	PRINTFORML  [ 1] %NAME:TARGET%
	PRINTFORML [100] 戻る
	CALL INPUT_SELECT, 2, 100
ELSEIF USEABLE_ITEM56(TARGET)
	RESULT = 1
ELSE
	PRINTFORML 排卵誘発剤を飲みます。よろしいですか？
	PRINTFORML  [ 0] はい
	PRINTFORML [100] 戻る
	CALL INPUT_SELECT, 1, 100
ENDIF
IF RESULT == 0
	PRINTFORMW %CALLNAME:PLAYER%は排卵誘発剤を飲んだ…
	TEQUIP:PLAYER:排卵誘発剤 = 1
	IF COND("発情期", PLAYER)
		BASE:PLAYER:バイオリズム = 3 + 1p11 + 1p12 + 1p13 + 1p20
	ELSE
		BASE:PLAYER:バイオリズム = 3 + 1p11 + 1p12 + 1p13
	ENDIF
ELSEIF RESULT == 1
	PRINTFORMW %CALLNAME:TARGET%に排卵誘発剤を飲ませた…
	TEQUIP:排卵誘発剤 = 1
	IF COND("発情期")
		BASE:バイオリズム = 3 + 1p11 + 1p12 + 1p13 + 1p20
	ELSE
		BASE:バイオリズム = 3 + 1p11 + 1p12 + 1p13
	ENDIF
ELSEIF RESULT == 100
	TFLAG:14 = 1
	RETURN 0
ENDIF

TFLAG:16 = RESULT
ITEM:排卵诱发剂 -= 1

