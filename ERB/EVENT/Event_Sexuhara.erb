VARSET LOCALS
SPLIT CSTR:MASTER:セクハラ中, "/", LOCALS

FOR LCOUNT, 0, 100
	SIF LOCALS:LCOUNT == ""
		BREAK
	CSTR:MASTER:セクハラ済 = %LOCALS:LCOUNT%/%CSTR:MASTER:セクハラ済%
	CSTR:MASTER:セクハラ中 = %LOCALS:LCOUNT%

	SELECTCASE ARGS
	CASE "追加"
		SIF LOCALS:(LCOUNT + 1) == ""
			CALL PRINT_SEXUHARA_MESSAGE, CSTR:MASTER:セクハラ中, ARG, 1
	CASEELSE
		CALL PRINT_SEXUHARA_MESSAGE, CSTR:MASTER:セクハラ中, ARG
	ENDSELECT

	CSTR:MASTER:直前のセクハラ = %LOCALS:LCOUNT%
NEXT

