		LOCAL = 3000
	;精力
	ELSEIF RAND:2
		LOCAL = 2000
	;ＥＰ
	ELSE
		LOCAL = 1000
	ENDIF

	SELECTCASE RAND:10
	CASE IS < 2
		LOCAL += 10
	CASE IS < 4
		LOCAL += 20
	CASE IS < 6
		LOCAL += 30
	CASE IS < 8
		LOCAL += 40
	CASEELSE
		LOCAL += 50
	ENDSELECT
;特殊効果
CASE IS <= 79
	SELECTCASE RAND:11
	;○○強化 該当部位をせめる場合に与える快感が強くなる 種類はキッス,バスト,ヒップ,ヴァッジ
	CASE 0 TO 2
		;Ｃ
		IF RAND:5 == 0
			LOCAL = 10000
		;Ｖ
		ELSEIF RAND:4 == 0
			LOCAL = 11000
		;Ａ
		ELSEIF RAND:3 == 0
			LOCAL = 12000
		;Ｂ
		ELSEIF RAND:2
			LOCAL = 13000
		;Ｍ
		ELSE
			LOCAL = 14000
		ENDIF
		LOCAL += 50
	;実行値アップ+○ 種類は+4,+7,+10
	CASE 3
		LOCAL = 21000
		SELECTCASE RAND:10
		CASE IS <= 6
			LOCAL += 4
		CASE IS <= 8
			LOCAL += 7
		CASEELSE
			LOCAL += 10
		ENDSELECT
	;ムードアップ+○ ムードアップ+○
	CASE 4
		LOCAL = 20000
		SELECTCASE RAND:10
		CASE IS <= 6
			LOCAL += 1
		CASE IS <= 8
			LOCAL += 2
		CASEELSE
			LOCAL += 3
		ENDSELECT
	;押し倒され率+○％
	CASE 5
		LOCAL = 23000
		SELECTCASE RAND:10
		CASE IS <= 6
			LOCAL += 10
		CASE IS <= 8
			LOCAL += 20
		CASEELSE
			LOCAL += 30
		ENDSELECT
	;受ける快感+○％ 種類は+10,+20,+50
	CASE 6
		LOCAL = 22000
		SELECTCASE RAND:10
		CASE IS <= 6
			LOCAL += 10
		CASE IS <= 8
			LOCAL += 20
		CASEELSE
			LOCAL += 50
		ENDSELECT
	;○○に強い その種族に強くなる 種類は少女,妖精,悪魔,ケモノ,トカゲ

	;常にアルカナ
	CASE 7, 8
		;常にエンラジ
		IF RAND:4 == 0
			LOCAL = 33000
		;常にセンシブ
		ELSEIF RAND:3 == 0
			LOCAL = 32000
		;常にミニマム ステート異常ミニマムになる
		ELSEIF RAND:2
			LOCAL = 31000
		;常にウルズグン
		ELSE
			LOCAL = 30000
		ENDIF
	;経験値増加
	CASE 9
		LOCAL = 24000
		SELECTCASE RAND:10
		CASE IS <= 6
			LOCAL += 20
		CASE IS <= 8
			LOCAL += 50
		CASEELSE
			LOCAL += 100
		ENDSELECT
	;ストック増加
	CASEELSE
		LOCAL = 6000
	ENDSELECT
;主に探索で効くもの
CASEELSE
	;隠密+○ 敵に出会う確率軽減。
	IF RAND:3 == 0
		LOCAL = 50000
	;宝箱出現率アップ
	ELSEIF RAND:2
		LOCAL = 51000
	;ドア発見率アップ
	ELSE
		LOCAL = 52000
	ENDIF
	IF RAND:4 == 0
		LOCAL += 20
	ELSE
		LOCAL += 40
	ENDIF
ENDSELECT
RETURNF LOCAL

