@ACCESSORY_ABL()
#FUNCTION
;LOCALに XXXを効果の種類、AAAを効力として、XXXAAA の形で数値を入れる

SELECTCASE RAND:100
;殆どの場合はステータス変化(種類は精力,技巧,精神力,魅力)
CASE IS <= 50
	;魅力
	IF RAND:5 == 0
		LOCAL = 5000
	;精神力
	ELSEIF RAND:4 == 0
		LOCAL = 4000
	;技巧
