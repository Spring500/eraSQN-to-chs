LOCAL = 0
FOR LCOUNT, 1, 11
	ARGS = %ARGS:LCOUNT%
	SELECTCASE ARGS
	CASE "Ｙシャツ"
		SETBIT LOCAL, 0
	CASE "女教師", "スーツ"
		SETBIT LOCAL, 1
	CASE "着物", "和服"
		SETBIT LOCAL, 2
	CASE "メイド", "メイド服"
		SETBIT LOCAL, 3
	CASE "体操服"
		SETBIT LOCAL, 4
	CASE "看護婦", "ナース", "ナース服"
		SETBIT LOCAL, 5
	CASE "チャイナ", "チャイナ服"
		SETBIT LOCAL, 6
		LOCAL |= SETFLAG_COMMON("ワンピース")
	CASE "セーラー", "セーラー服"
		SETBIT LOCAL, 7
	CASE "巫女", "巫女服"
		SETBIT LOCAL, 8
	CASE "ドレス"
		SETBIT LOCAL, 9
	CASE "ウェディング", "ウェディングドレス"
		SETBIT LOCAL, 10
		SETBIT LOCAL, 9
	CASE "シスター", "修道服"
		SETBIT LOCAL, 11
	CASE "布切れ"
		SETBIT LOCAL, 12
	CASE "ビスチェ"
		SETBIT LOCAL, 13
	CASE "ベビードール"
		SETBIT LOCAL, 14
	CASE "スカート着用"
		SETBIT LOCAL, 15
	CASE "ウェイトレス"
		SETBIT LOCAL, 16
	CASE "ゴスロリドレス"
		SETBIT LOCAL, 17
	CASE "チアリーダー"
		SETBIT LOCAL, 18
	CASE "パジャマ"
		SETBIT LOCAL, 19
	CASEELSE
		SIF STRLENS(ARGS)
			LOCAL |= SETFLAG_COMMON(ARGS)
	ENDSELECT
	SIF STRLENS(ARGS:(LCOUNT + 1) ) == 0
		RETURNF LOCAL
NEXT
RETURNF LOCAL

;-------------------------------------------------
;ARGのシャツが条件ARGSを満たすか確認する
;-------------------------------------------------
@CHECK_SHIRT(ARGS, ARG)
#FUNCTION
SIF ARG == 0 && TARGET
	ARG = TARGET
SIF EQUIP:ARG:上着 == 0
	RETURNF 0
IF ARGS == "はだけ可"
	SIF SETFLAG_SHIRT("はだけた")&EQUIP:ARG:上着
		RETURNF 0
	SIF SETFLAG_SHIRT("はだけ不可")&EQUIP:ARG:上着
		RETURNF 0
	RETURNF 1
ELSEIF (SETFLAG_SHIRT(ARGS)&EQUIP:ARG:上着) == SETFLAG_SHIRT(ARGS)
	RETURNF 1
ENDIF
RETURNF 0
