		LOCALS = 人狼のレザーブラ
		LOCAL = SETFLAG_BRA("3/4カップ", "レザー", "黒")
	ENDIF
CASE 8, 9, 32, 52, 59
	IF CFLAG:(ARG:1):8 != 2
		LOCALS = 大人しめなブラ
		LOCAL = SETFLAG_BRA("大人しめ")
	ENDIF
