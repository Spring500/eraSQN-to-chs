;-------------------------------------------------
;ブラをつける関数
;指定番号によって名前がCSTR:41に代入される。
;99番までは、その番号の夢魔の下着。
;EQUIP:ブラはブラの特徴フラグ。ビット管理する
;-------------------------------------------------
@SET_BRA, ARG, ARG:1
;ARGのブラをARG:1番のものにする。ARG:1==0なら脱がす
;汚れ＆ずれたりしたフラグ等を初期化して新品にする
TCVAR:ARG:26 = 0

IF ARG:1 == 0
	EQUIP:ARG:ブラ = 0
	CSTR:ARG:41 = 
	RETURN 0
ENDIF

;名前記録
CSTR:ARG:41 = %PALAM_BRA(ARG:1, ARG, 1)%

;色をそろえる
CALL SAME_COLOR, ARG, 40, 41

;Ｈなブラはリネーム
SIF CHECK_BRA("超Ｈ", ARG)
	CALL RENAME_BRA, ARG

SIF EQUIP:ARG:ボディスーツ
	CALL SET_BODYS, ARG

TCVAR:ARG:26 = 0
RETURN ARG:1
;-------------------------------------------------
;ARGのブラの名前。ARG:1==0なら正式名称 by CSTR。ARG:1==1なら短縮名称 by EQUIP。
;基本的に、揃いのパンツがあるときにはそっちに複合した名前にする。
;また、上に服を着ているときには省略する。
;-------------------------------------------------
@BRA(ARG, ARG:1)
#FUNCTIONS
IF ARG:1 == 0 && CSTR:ARG:41 != ""
	LOCALS = %CSTR:ARG:41%
	SIF CONFIG("衣装の細かい色表示の禁止")
		RETURNF LOCALS
	LOCALS:1 = %TEXTS("衣装の色", EQUIP:ARG:ブラ)%
	SIF LOCALS:1 != "" && SUBSTRING(CSTR:ARG:41, 0, 2) != SUBSTRING(LOCALS:1, 0, 2)
		LOCALS = %LOCALS%(%LOCALS:1%)
ELSE
	IF CHECK_BRA("貝殻", ARG)
		LOCALS = 貝殻ブラ
	ELSEIF CHECK_BRA("帷子", ARG)
		LOCALS = 帷子
	ELSEIF CHECK_BRA("前掛け", ARG)
		LOCALS = 前掛け
	ELSEIF CHECK_BRA("タンクトップ", ARG)
		LOCALS = タンクトップ
	;ELSEIF CHECK_BRA("マイクロ", ARG)
	;	LOCALS = マイクロブラ
	ELSEIF CHECK_BRA("水着", ARG)
		LOCALS = ビキニ
	ELSEIF CHECK_BRA("キャミソール", ARG)
		LOCALS = キャミソール
	ELSE
		LOCALS = ブラジャー
	ENDIF
ENDIF
RETURNF LOCALS

;-------------------------------------------------
;ARG番のブラの正式名称
;ARG:1 > 0ならARG:1はキャラ番号として働く
;-------------------------------------------------
@NAME_BRA(ARG, ARG:1)
#FUNCTIONS
LOCALS = %PALAM_BRA(ARG, ARG:1)%
RETURNF LOCALS

;-------------------------------------------------
;bit値に応じてキャラARGの穿いているブラの名前をリネーム
;主にＨなブラ用
;-------------------------------------------------
@RENAME_BRA, ARG
SIF ARG < 0
	RETURN 0
SIF ARG == 0 && TARGET
	ARG = TARGET
SIF EQUIP:ARG:ブラ == 0
	RETURN 0

VARSET LOCALS
IF CHECK_BRA("レース", ARG)
	SELECTCASE TEXTS("衣装の色", EQUIP:ARG:ブラ)
	CASE "黒", "紫"
		LOCALS = %TEXTS("衣装の色", EQUIP:ARG:ブラ)%レースブラ
	CASEELSE
		IF CHECK_BRA("オープンブラ", ARG)
			LOCALS = レースのオープンブラ
		ELSE
			LOCALS = レースのブラ
		ENDIF
	ENDSELECT
ELSEIF CHECK_BRA("シルク", ARG)
	LOCALS = シルクのブラ
ELSEIF CHECK_BRA("オープンブラ", ARG)
	LOCALS = オープンブラ
ELSEIF CHECK_BRA("1/4カップ", ARG)
	LOCALS = 1/4カップブラ
ELSEIF CHECK_BRA("マイクロ", ARG)
	LOCALS = マイクロブラ
ELSEIF CHECK_BRA("1/2カップ", ARG)
	LOCALS = 1/2カップブラ
ELSEIF CHECK_BRA("シースルー", ARG)
	LOCALS = シースルーブラ
ELSEIF CHECK_BRA("3/4カップ", ARG)
	LOCALS = 3/4カップブラ
ENDIF

SIF CHECK_BRA("シースルー", ARG) && LOCALS != "シースルーブラ"
	LOCALS = %LOCALS%(透)

SIF STRLENS(LOCALS)
	CSTR:ARG:41 = %LOCALS%

;-------------------------------------------------
;ARG番のブラの詳細パラ
;ARG:1 > 0ならARG:1はキャラ番号として働き、ARG:1 > 0 && ARG:2 > 0ならEQUIPを定める
;-------------------------------------------------
@PALAM_BRA(ARG, ARG:1, ARG:2)
#FUNCTIONS
VARSET LOCAL
VARSET LOCALS

