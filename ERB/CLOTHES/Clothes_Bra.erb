CASE 1
	IF CFLAG:(ARG:1):8 == 2
		LOCALS = 淫魔のブラ
		LOCAL = SETFLAG_BRA("水着", "3/4カップ", "黒")
	ELSEIF CFLAG:(ARG:1):8 == 3
		LOCALS = 淫魔のブラ
		LOCAL = SETFLAG_BRA("水着", "3/4カップ", "黒")
	ELSE
		LOCALS = 淫魔のブラ
		LOCAL = SETFLAG_BRA("水着", "3/4カップ", "紫")
	ENDIF
CASE 4
	IF CFLAG:(ARG:1):8 == 3
		LOCALS = 妖精のキャミソール
		LOCAL = SETFLAG_BRA("オープンキャミ", "フリル", "紫")
	ELSE
		LOCALS = 妖精のキャミソール
		LOCAL = SETFLAG_BRA("オープンキャミ", "フリル", "純白")
	ENDIF
CASE 6
	IF CFLAG:(ARG:1):8 == 2
		LOCALS = 魔猫のビスチェ
		LOCAL = SETFLAG_BRA("ビスチェ", "毛皮", "青")
	ELSEIF CFLAG:(ARG:1):8 == 3
		LOCALS = 魔猫のビスチェ
		LOCAL = SETFLAG_BRA("ビスチェ", "毛皮", "黄")
	ELSE
		LOCALS = 魔猫のビスチェ
