;-------------------------------------------------
;指示されたとおりのブラのフラグを設定するために使う
;-------------------------------------------------
@SETFLAG_BRA(ARGS:1, ARGS:2, ARGS:3, ARGS:4, ARGS:5, ARGS:6, ARGS:7, ARGS:8, ARGS:9, ARGS:10)
#FUNCTION
#DIM LCOUNT

LOCAL = 0
FOR LCOUNT, 1, 11
	ARGS = %ARGS:LCOUNT%
	SELECTCASE ARGS
	;谷間が綺麗に見える
	CASE "3/4カップ", "３/４カップ"
		SETBIT LOCAL, 0
		LOCAL |= SETFLAG_COMMON("谷間露出")
	;乳首がちょっと見える
	CASE "1/2カップ", "１/２カップ", "ハーフカップ"
		SETBIT LOCAL, 1
		LOCAL |= SETFLAG_COMMON("谷間露出", "乳首露出")
	;乳首は隠れない
	CASE "1/4カップ", "１/４カップ", "トップレスブラ"
		SETBIT LOCAL, 2
		LOCAL |= SETFLAG_COMMON("谷間露出", "乳首露出", "はだけ不可")
	;カップ部分だけない
	CASE "オープンブラ"
		SETBIT LOCAL, 3
		LOCAL |= SETFLAG_COMMON("胸露出", "はだけ不可")
	;乳首周辺の三角形しか隠していない
	CASE "マイクロ"
		SETBIT LOCAL, 4
		LOCAL |= SETFLAG_COMMON("谷間露出")
	CASE "タンクトップ"
		SETBIT LOCAL, 5
	;おへそ辺りまで
	CASE "キャミソール", "キャミ"
		SETBIT LOCAL, 6
	;ブラが隠れるぐらいの長さ
	CASE "ロングキャミソール", "ロングキャミ"
		SETBIT LOCAL, 7
		SETBIT LOCAL, 6
	;おへそが見えるように前面が開いている
	CASE "オープンキャミソール", "オープンキャミ"
		SETBIT LOCAL, 8
		SETBIT LOCAL, 6
	;布が巻かれているようなの
	CASE "民族的"
		SETBIT LOCAL, 9
		LOCAL |= SETFLAG_COMMON("谷間露出")
	;クノイチの着てるのは鎖製ではないと信じたい
	CASE "帷子", "かたびら"
		SETBIT LOCAL, 10
		LOCAL |= SETFLAG_COMMON("ずれ不可", "ズリ不可")
	;ドラグーン着用
	CASE "前掛け"
		SETBIT LOCAL, 11
	CASE "チューブトップ"
		SETBIT LOCAL, 12
	CASE "ビスチェ"
		SETBIT LOCAL, 13
	CASE "スポーツブラ", "スポーツ"
		SETBIT LOCAL, 14
	CASE "貝殻"
		SETBIT LOCAL, 15
		LOCAL |= SETFLAG_COMMON("ズリ不可", "谷間露出")
	CASE "超Ｈ"
		SETBIT LOCAL, 16
	;オートブラ
	CASE "大人しめ"
		LOCAL |= SETFLAG_COMMON("大人しめの色")
	CASE "清楚"
		SIF RAND:3 == 0
			SETBIT LOCAL, 6
		SIF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("フリル")
		SIF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("シルク")
		LOCAL |= SETFLAG_COMMON("大人しめの色")
	CASE "ちょっとＨ"
		IF RAND:3
			SETBIT LOCAL, 0
			LOCAL |= SETFLAG_COMMON("谷間露出")
		ELSEIF RAND:2
			SETBIT LOCAL, 1
			LOCAL |= SETFLAG_COMMON("谷間露出")
		ENDIF
		SIF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("フリル")
		SIF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("シルク")
		SIF RAND:3 == 0
			LOCAL |= SETFLAG_COMMON("シースルー")
		LOCAL |= SETFLAG_COMMON("Ｈめの色")
	CASE "Ｈ"
		IF RAND:5 == 0
			SETBIT LOCAL, 0
			LOCAL |= SETFLAG_COMMON("谷間露出")
		ELSEIF RAND:4 == 0
			SETBIT LOCAL, 1
			LOCAL |= SETFLAG_COMMON("谷間露出")
		ELSEIF RAND:3 == 0
			SETBIT LOCAL, 2
			LOCAL |= SETFLAG_COMMON("谷間露出", "乳首露出", "はだけ不可")
		ELSEIF RAND:2
			SETBIT LOCAL, 3
			LOCAL |= SETFLAG_COMMON("胸露出", "はだけ不可")
		ELSE
			SETBIT LOCAL, 4
			LOCAL |= SETFLAG_COMMON("谷間露出")
		ENDIF
		SIF RAND:5 == 0
			LOCAL |= SETFLAG_COMMON("シルク")
		SIF RAND:5 == 0
			LOCAL |= SETFLAG_COMMON("レース")
		SIF RAND:4 == 0
			LOCAL |= SETFLAG_COMMON("シースルー")
		LOCAL |= SETFLAG_COMMON("Ｈめの色")
	CASEELSE
		SIF STRLENS(ARGS)
			LOCAL |= SETFLAG_COMMON(ARGS)
	ENDSELECT
	SIF STRLENS(ARGS:(LCOUNT + 1) ) == 0
		RETURNF LOCAL
NEXT
RETURNF LOCAL

;-------------------------------------------------
;ARGのブラが条件ARGS:1～5を満たすか確認する
;-------------------------------------------------
@CHECK_BRA(ARGS, ARG)
#FUNCTION
SIF ARG == 0 && TARGET
	ARG = TARGET
SIF EQUIP:ARG:ブラ == 0
	RETURNF 0

SELECTCASE ARGS
CASE "はだけ可"
	;既に露出している場合
	SIF SETFLAG_BRA("胸露出")&EQUIP:ARG:ブラ
		RETURNF 0
	SIF SETFLAG_BRA("乳首露出")&EQUIP:ARG:ブラ
		RETURNF 0
	SIF SETFLAG_BRA("はだけた")&EQUIP:ARG:ブラ
		RETURNF 0
	SIF SETFLAG_BRA("はだけ不可")&EQUIP:ARG:ブラ
		RETURNF 0
	RETURNF 1
CASE "乳首露出"
	SIF SETFLAG_BRA("胸露出")&EQUIP:ARG:ブラ
		RETURNF 1
	SIF SETFLAG_BRA("乳首露出")&EQUIP:ARG:ブラ
		RETURNF 1
CASEELSE
	SIF (SETFLAG_BRA(ARGS)&EQUIP:ARG:ブラ) == SETFLAG_BRA(ARGS)
		RETURNF 1
ENDSELECT

RETURNF 0
