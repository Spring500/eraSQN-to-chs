;-------------------------------------------------
;指示されたとおりの靴のフラグを設定するために使う
;-------------------------------------------------
@SETFLAG_SHOES(ARGS:1, ARGS:2, ARGS:3, ARGS:4, ARGS:5, ARGS:6, ARGS:7, ARGS:8, ARGS:9, ARGS:10)
#FUNCTION
#DIM LCOUNT

LOCAL = 0
FOR LCOUNT, 1, 11
	ARGS = %ARGS:LCOUNT%
	SELECTCASE ARGS
	CASE "足首まで"
		SETBIT LOCAL, 0
	CASE "ロング"
		SETBIT LOCAL, 1
	CASE "ブーツ"
		SETBIT LOCAL, 2
	CASE "ショートブーツ"
		SETBIT LOCAL, 2
		SETBIT LOCAL, 0
	CASE "ロングブーツ"
		SETBIT LOCAL, 2
		SETBIT LOCAL, 1
	CASE "サンダル"
		SETBIT LOCAL, 3
		SETBIT LOCAL, 0
		LOCAL |= SETFLAG_COMMON("指露出")
	CASE "ローファー"
		SETBIT LOCAL, 4
		SETBIT LOCAL, 0
	CASE "ブーティ"
		SETBIT LOCAL, 5
		SETBIT LOCAL, 0
	CASE "足袋"
		SETBIT LOCAL, 6
		SETBIT LOCAL, 0
	CASE "パンプス"
		SETBIT LOCAL, 7
		SETBIT LOCAL, 0
	CASE "ハイヒール"
		SETBIT LOCAL, 8
		SETBIT LOCAL, 0
	CASE "草履"
		SETBIT LOCAL, 9
		SETBIT LOCAL, 0
		LOCAL |= SETFLAG_COMMON("指露出")
	CASE "ミュール"
		SETBIT LOCAL, 10
		SETBIT LOCAL, 0
	CASE "スニーカー"
		SETBIT LOCAL, 11
		SETBIT LOCAL, 0
	CASEELSE
		SIF STRLENS(ARGS)
			LOCAL |= SETFLAG_COMMON(ARGS)
	ENDSELECT
	SIF STRLENS(ARGS:(LCOUNT + 1) ) == 0
		RETURNF LOCAL
NEXT
RETURNF LOCAL

;-------------------------------------------------
;ARGの靴が条件ARGSを満たすか確認する
;-------------------------------------------------
@CHECK_SHOES(ARGS, ARG)
#FUNCTION
SIF ARG == 0 && TARGET
	ARG = TARGET
SIF EQUIP:ARG:鞋子 == 0
	RETURNF 0
SIF (SETFLAG_SHOES(ARGS)&EQUIP:ARG:鞋子) == SETFLAG_SHOES(ARGS)
	RETURNF 1
RETURNF 0
